# GitGuide Roadmap Service - Cloud Run Deployment
# Dedicated service for LLM-heavy roadmap generation

FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv for fast dependency management
RUN pip install uv

# Copy dependency files
COPY pyproject.toml uv.lock ./

# Install dependencies
RUN uv pip install --system -r pyproject.toml

# Copy application code
COPY app/ ./app/

# Create credentials directory (will be populated from environment variables in production)
RUN mkdir -p ./credentials

# Copy startup script
COPY scripts/startup.sh /startup.sh
RUN chmod +x /startup.sh && \
    sed -i 's/\r$//' /startup.sh

# Set environment variables
ENV PYTHONUNBUFFERED=1

EXPOSE 8080

# Health check (uses PORT env var, defaults to 8080)
# Increased start-period to 60s for heavy dependencies (Torch, LangGraph)
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=5 \
    CMD sh -c 'curl -f http://localhost:${PORT:-8080}/health || exit 1'

# Use startup script to write credentials and run the application
# startup.sh is the single source of truth - no uvicorn args in CMD
ENTRYPOINT ["/startup.sh"]
CMD []
